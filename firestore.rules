rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 管理者UID
    function isAdmin() {
      return request.auth != null && request.auth.uid == 'PktGlRBWVZc9E0Y3OLSQ4TeRg0P2';
    }
    
    // ヘルパー関数：認証済みユーザーかチェック
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ヘルパー関数：ユーザーが自分のデータにアクセスしているかチェック（ドキュメントが存在する場合）
    function isOwner() {
      return request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // ヘルパー関数：作成時にユーザーIDが正しく設定されているかチェック
    function isValidCreate() {
      return request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // 会社本体の事業計画
    match /companyBusinessPlan/{planId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isValidCreate();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // 事業企画（動的に追加される事業企画）
    match /businessProjects/{projectId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isValidCreate();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // サービス事業計画（各事業企画内の具体的なサービス内容）
    match /servicePlans/{planId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isValidCreate();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // 構想（各事業内の構想）
    match /concepts/{conceptId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isValidCreate();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // ユーザープロファイル
    match /users/{userId} {
      allow read: if isAuthenticated();
      // 作成: 新規登録時（承認待ち状態で作成）
      allow create: if isAuthenticated() && request.auth.uid == userId && request.resource.data.approved == false;
      // 更新: 自分のデータまたは管理者が承認する場合
      // ただし、approvedフィールドは管理者のみ更新可能
      allow update: if isAuthenticated() && (
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['approved', 'approvedBy', 'approvedAt'])) ||
        (isAdmin())
      );
      // 削除: 自分のデータのみ
      allow delete: if isAuthenticated() && request.auth.uid == userId;
      
      // ログイン履歴
      match /loginHistory/{historyId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && request.auth.uid == userId;
      }
    }
    
    // 管理者情報
    match /admins/{adminId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 承認リクエスト
    match /approvalRequests/{requestId} {
      // 読み取り: 認証済みユーザー（管理者は全件、一般ユーザーは自分のリクエストのみ）
      allow read: if isAuthenticated() && (isAdmin() || request.auth.uid == requestId);
      // 作成: 新規登録時（自分のリクエストのみ）
      allow create: if isAuthenticated() && request.auth.uid == requestId;
      // 更新: 管理者のみ（承認/拒否）
      allow update: if isAdmin();
      // 削除: 管理者のみ
      allow delete: if isAdmin();
    }
    
    // ページ埋め込み（ベクトル埋め込みデータ）
    match /pageEmbeddings/{pageId} {
      // 認証済みユーザーであれば読み書き可能
      allow read, write: if isAuthenticated();
    }
    
    // ページ構造データ（コンテンツ構造、関連性、フォーマットパターン）
    match /pageStructures/{pageId} {
      // 認証済みユーザーであれば読み書き可能
      allow read, write: if isAuthenticated();
    }
    
    // ページテンプレート
    match /pageTemplates/{templateId} {
      // 読み取り: 認証済みユーザー（自分のテンプレートのみ）
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // 作成: 認証済みユーザー（自分のテンプレートのみ）
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // 更新: 認証済みユーザー（自分のテンプレートのみ）
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // 削除: 認証済みユーザー（自分のテンプレートのみ）
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}

