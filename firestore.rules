rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ヘルパー関数：認証済みユーザーかチェック
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ヘルパー関数：ユーザーが自分のデータにアクセスしているかチェック（ドキュメントが存在する場合）
    function isOwner() {
      return request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // ヘルパー関数：作成時にユーザーIDが正しく設定されているかチェック
    function isValidCreate() {
      return request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // 会社本体の事業計画
    match /companyBusinessPlan/{planId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isValidCreate();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // 事業企画（動的に追加される事業企画）
    match /businessProjects/{projectId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isValidCreate();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // サービス事業計画（各事業企画内の具体的なサービス内容）
    match /servicePlans/{planId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isValidCreate();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // 構想（各事業内の構想）
    match /concepts/{conceptId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isValidCreate();
      allow update, delete: if isAuthenticated() && isOwner();
    }
    
    // ユーザープロファイル
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}

