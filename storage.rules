rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 事業計画のキービジュアル画像
    match /business-plans/{planId}/{allPaths=**} {
      // 認証済みユーザーが自分の事業計画の画像を読み書き可能
      allow read, write: if request.auth != null;
    }
    
    // その他のパス（必要に応じて追加）
    match /{allPaths=**} {
      // 認証済みユーザーが読み書き可能
      allow read, write: if request.auth != null;
    }
  }
}

